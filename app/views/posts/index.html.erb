<div class="container">
  <h1>Post</h1>

  <table class="table">
    <thead>
      <tr>  
        <th> Title </th>
        <th> Content </th>
      </tr>  
    </thead>
    <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.content %><td>
            <td><%= link_to 'Show', post %>
            <td><%= link_to 'Edit', edit_post_path(post) %>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
          </tr>
        <% end %>
    <tbody>    
  </table>
  <%= link_to 'Tao moi', new_post_path %>
  <%= paginate @posts %>
</div>